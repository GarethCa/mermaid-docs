{
  "name": "mermaid-docstring-diagrams",
  "displayName": "Mermaid Docstring Diagrams",
  "description": "Automatically extracts and renders Mermaid diagrams from Python docstrings with inline preview and hover features",
  "version": "1.0.1",
  "publisher": "GarethCairns",
  "author": "Gareth Cairns",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GarethCa/mermaid-docs.git"
  },
  "bugs": {
    "url": "https://github.com/GarethCa/mermaid-docs/issues"
  },
  "homepage": "https://github.com/GarethCa/mermaid-docs#readme",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "mermaid",
    "diagrams",
    "python",
    "docstring",
    "documentation",
    "visualization",
    "flowchart",
    "graph",
    "preview",
    "inline"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mermaid.helloWorld",
        "title": "Hello World",
        "category": "Mermaid"
      },
      {
        "command": "mermaid.toggleDiagrams",
        "title": "Toggle Mermaid Diagrams",
        "category": "Mermaid",
        "icon": "$(eye)"
      },
      {
        "command": "mermaid.refreshDiagrams",
        "title": "Refresh Mermaid Diagrams",
        "category": "Mermaid",
        "icon": "$(refresh)"
      },
      {
        "command": "mermaid.testDecoration",
        "title": "Test Decoration",
        "category": "Mermaid"
      },
      {
        "command": "mermaid.testWebview",
        "title": "Test Webview",
        "category": "Mermaid"
      },
      {
        "command": "mermaid.showDiagram",
        "title": "Show Mermaid Diagram",
        "category": "Mermaid"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "mermaid.toggleDiagrams",
          "when": "editorLangId == python",
          "group": "navigation"
        },
        {
          "command": "mermaid.refreshDiagrams",
          "when": "editorLangId == python",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "mermaid.toggleDiagrams",
          "when": "editorLangId == python"
        },
        {
          "command": "mermaid.refreshDiagrams",
          "when": "editorLangId == python"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "pretest": "npm run compile && npm run lint",
    "test": "vscode-test",
    "test-mermaid": "ts-node src/testMermaidRenderer.ts"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "ts-node": "^10.9.1",
    "@mermaid-js/mermaid-cli": "^10.6.1"
  },
  "dependencies": {
    "@mermaid-js/mermaid-cli": "^10.6.1"
  }
}
